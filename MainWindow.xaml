<Window x:Class="WpfChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChatApp"
        xmlns:viewmodels="clr-namespace:WpfChatApp.ViewModels"
        mc:Ignorable="d"
        Title="TestChat" Height="700" Width="1000"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        FontFamily="Roboto, Segoe UI"
        Icon="/Resources/AppIcon.png">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </Window.Resources>
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{DynamicResource SidebarBackgroundBrush}" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource InputBoxBorderBrush}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Logo -->
                    <RowDefinition Height="Auto"/> <!-- New Chat -->
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/>    <!-- History -->
                    <RowDefinition Height="Auto"/> <!-- Settings & Profile -->
                </Grid.RowDefinitions>

                <!-- Logo -->
                <TextBlock Grid.Row="0" Text="TestChat" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextForegroundBrush}" Margin="10,5,0,20"/>
                
                <Button Grid.Row="1"
                        Content="{DynamicResource Str_NewChat}" 
                        Command="{Binding NewChatCommand}"
                        Height="45"
                        Background="Transparent"
                        Foreground="{DynamicResource TextForegroundBrush}"
                        BorderBrush="{DynamicResource InputBoxBorderBrush}"
                        BorderThickness="1"
                        HorizontalContentAlignment="Left"
                        Padding="15,0"
                        Cursor="Hand"
                        Margin="0,0,0,10">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <!-- Search Bar -->
                <Border Grid.Row="2" 
                        Background="Transparent" 
                        BorderBrush="{DynamicResource InputBoxBorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="5" 
                        Margin="0,0,0,15"
                        MouseLeftButtonDown="SearchBorder_MouseLeftButtonDown"
                        Cursor="IBeam">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>
                         <TextBlock Text="🔍" Foreground="#808080" VerticalAlignment="Center" Margin="5,0,5,0"/>
                         <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                  x:Name="SearchBox"
                                  Grid.Column="1"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Foreground="{DynamicResource TextForegroundBrush}"
                                  VerticalAlignment="Center"
                                  FontSize="12"/>
                         <TextBlock Grid.Column="1" 
                                    Text="{DynamicResource Str_SearchChat}" 
                                    IsHitTestVisible="False" 
                                    Foreground="#606060" 
                                    VerticalAlignment="Center"
                                    Margin="2,0,0,0">
                             <TextBlock.Style>
                                 <Style TargetType="TextBlock">
                                     <Setter Property="Visibility" Value="Collapsed"/>
                                     <Style.Triggers>
                                         <DataTrigger Binding="{Binding SearchText}" Value="">
                                             <Setter Property="Visibility" Value="Visible"/>
                                         </DataTrigger>
                                     </Style.Triggers>
                                 </Style>
                             </TextBlock.Style>
                         </TextBlock>
                     </Grid>
                </Border>
                
                <!-- Chat History List -->
                <TextBlock Grid.Row="3" Text="{DynamicResource Str_History}" Foreground="#808080" Margin="5,0,0,5" FontSize="12" VerticalAlignment="Top"/>
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <ItemsControl ItemsSource="{Binding ChatHistoryView}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}"
                                        Background="Transparent"
                                        Foreground="{DynamicResource TextForegroundBrush}"
                                        BorderThickness="0"
                                        HorizontalContentAlignment="Left"
                                        Padding="10"
                                        Margin="0,2"
                                        Cursor="Hand"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Bottom Section: Profile (Settings Trigger) -->
                <StackPanel Grid.Row="4" Margin="0,15,0,0">
                    <Border BorderBrush="{DynamicResource InputBoxBorderBrush}" BorderThickness="0,1,0,0" Margin="0,0,0,10"/>
                    
                    <!-- User Profile Button -> Opens Settings -->
                    <Button Command="{Binding ToggleSettingsCommand}" Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="35" Height="35" Fill="#10A37F" Margin="0,0,10,0"/>
                            <TextBlock Text="G" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="12,0,0,0" Foreground="White" FontWeight="Bold" IsHitTestVisible="False"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Gian" FontWeight="SemiBold" Foreground="{DynamicResource TextForegroundBrush}" HorizontalAlignment="Left"/>
                                <TextBlock Text="user@testchat.com" FontSize="10" Foreground="#808080" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Area -->
        <Grid Grid.Column="1" Background="{DynamicResource ChatAreaBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Messages (Main Chat View) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" 
                          Visibility="{Binding HasStartedChat, Converter={StaticResource BoolToVis}}">
                <StackPanel MaxWidth="900" HorizontalAlignment="Stretch">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Message Content -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" x:Name="MessageContainer" MaxWidth="1200">
                                        <Border x:Name="MessageBubble" 
                                                Padding="0" 
                                                CornerRadius="0"
                                                Background="{x:Null}">
                                            <StackPanel>
                                                <!-- Attachment Preview in Message -->
                                                <Button Command="{Binding DataContext.OpenAttachmentCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                        CommandParameter="{Binding Attachment.FilePath}"
                                                        Background="Transparent" 
                                                        BorderThickness="0" 
                                                        Padding="0" 
                                                        Margin="0,0,0,5" 
                                                        Cursor="Hand" 
                                                        HorizontalContentAlignment="Stretch">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Attachment}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    
                                                    <Border CornerRadius="5" Background="#20000000" Padding="5">
                                                        <StackPanel>
                                                             <!-- Image Preview -->
                                                             <Image Source="{Binding Attachment.FilePath}" MaxHeight="200" MaxWidth="300" Stretch="Uniform" Margin="0,0,0,5" HorizontalAlignment="Left">
                                                                 <Image.Style>
                                                                     <Style TargetType="Image">
                                                                         <Setter Property="Visibility" Value="Collapsed"/>
                                                                         <Style.Triggers>
                                                                             <DataTrigger Binding="{Binding Attachment.IsImage}" Value="True">
                                                                                 <Setter Property="Visibility" Value="Visible"/>
                                                                             </DataTrigger>
                                                                         </Style.Triggers>
                                                                     </Style>
                                                                 </Image.Style>
                                                             </Image>
                                                
                                                             <!-- File Info (Icon + Name) -->
                                                             <StackPanel Orientation="Horizontal">
                                                                 <TextBlock Text="{Binding Attachment.FileIcon}" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="{DynamicResource TextForegroundBrush}"/>
                                                                 <StackPanel>
                                                                     <TextBlock Text="{Binding Attachment.FileName}" FontWeight="SemiBold" Foreground="{DynamicResource TextForegroundBrush}" HorizontalAlignment="Left"/>
                                                                     <TextBlock Text="{Binding Attachment.FormattedSize}" FontSize="10" Foreground="#808080" HorizontalAlignment="Left"/>
                                                                 </StackPanel>
                                                             </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </Button>
        
                                                <TextBlock Text="{Binding Content}" 
                                                           TextWrapping="Wrap" 
                                                           Foreground="{DynamicResource TextForegroundBrush}"
                                                           FontSize="15"/>
                                                
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Feedback Buttons (AI Only) & Copy -->
                                        <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            
                                            <!-- Copy Button (Moved here) -->
                                            <Button Command="{Binding DataContext.CopyMessageCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding Content}"
                                                    Margin="0,0,10,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="2"
                                                    Opacity="0.6"
                                                    Cursor="Hand"
                                                    ToolTip="{DynamicResource Str_Copy}">
                                                <TextBlock Text="📋" FontSize="14" Foreground="{DynamicResource TextForegroundBrush}"/>
                                            </Button>
                                            
                                            <Button Content="👍" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" Opacity="0.5" Cursor="Hand" Foreground="{DynamicResource TextForegroundBrush}"/>
                                            <Button Content="👎" Background="Transparent" BorderThickness="0" Opacity="0.5" Cursor="Hand" Foreground="{DynamicResource TextForegroundBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <!-- User Message Styling -->
                                    <DataTrigger Binding="{Binding IsUser}" Value="True">
                                        <Setter TargetName="MessageContainer" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter TargetName="MessageContainer" Property="MaxWidth" Value="900"/>
                                        <Setter TargetName="MessageBubble" Property="Background" Value="{DynamicResource MessageBubbleUserBrush}"/>
                                        <Setter TargetName="MessageBubble" Property="Padding" Value="15,10"/>
                                        <Setter TargetName="MessageBubble" Property="CornerRadius" Value="10"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Generating Indicator -->
                    <TextBlock Text="{DynamicResource Str_Generating}" 
                               Foreground="#808080" 
                               FontSize="12" 
                               Margin="55,5,0,10" 
                               FontStyle="Italic">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTyping}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>

            <!-- Input Area -->
            <!-- Input Area Container (Preview + Input) -->
            <!-- Input Area Container (Preview + Input) - Main View -->
            <StackPanel Grid.Row="1" Margin="40,0,40,40" VerticalAlignment="Bottom" MaxWidth="900" HorizontalAlignment="Stretch"
                        Visibility="{Binding HasStartedChat, Converter={StaticResource BoolToVis}}">
                
                <!-- Attachment Preview -->
                <Border Background="{DynamicResource ChatAreaBackgroundBrush}" 
                        BorderBrush="#505050" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="10" 
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding PendingAttachment}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📎" Margin="0,0,5,0" Foreground="{DynamicResource TextForegroundBrush}"/>
                        <TextBlock Text="{Binding PendingAttachment.FileName}" FontWeight="Bold" Foreground="{DynamicResource TextForegroundBrush}" Margin="0,0,10,0"/>
                        <Button Command="{Binding RemoveAttachmentCommand}" Content="❌" Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="Red"/>
                    </StackPanel>
                </Border>

                <!-- Input Box -->
                <Border Background="{DynamicResource InputBoxBackgroundBrush}" 
                        BorderBrush="{DynamicResource InputBoxBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5" 
                        Height="50"
                        Padding="10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/> <!-- Paperclip -->
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/> <!-- Send/Stop -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Attach Button -->
                        <Button Grid.Column="0"
                                Command="{Binding AttachFileCommand}"
                                Content="+"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="30"
                                FontSize="24"
                                FontWeight="Bold"
                                Cursor="Hand"
                                ToolTip="{DynamicResource Str_AttachFile}"
                                Foreground="{DynamicResource TextForegroundBrush}"
                                VerticalContentAlignment="Center"
                                Margin="0,0,0,2"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource TextForegroundBrush}"
                                 FontSize="16"
                                 CaretBrush="{DynamicResource TextForegroundBrush}"
                                 Margin="5,0"
                                 PreviewKeyDown="InputBox_PreviewKeyDown">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        
                        <!-- Send Button (Rounded) -->
                        <Button Grid.Column="2" 
                                Command="{Binding SendCommand}"
                                BorderThickness="0"
                                Width="40"
                                Height="40"
                                Cursor="Hand"
                                Margin="5,0,0,0">
                                <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Background" Value="{DynamicResource SendButtonBrush}"/> 
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="20"> <!-- Fully Rounded -->
                                                    <TextBlock Text="➤" Foreground="{DynamicResource SendButtonTextBrush}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/> 
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Stop Button (Block) -->
                        <Button Grid.Column="2" 
                                Command="{Binding StopGenerationCommand}"
                                BorderThickness="0"
                                Width="35"
                                Height="35"
                                Cursor="Hand"
                                Background="#404040"
                                ToolTip="{DynamicResource Str_Stop}">
                                <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="#404040" CornerRadius="5">
                                                    <Rectangle Width="12" Height="12" Fill="White"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- LANDING VIEW (Centered Greeting + Input) -->
            <Grid Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                  Margin="50" MaxWidth="800"
                  Visibility="{Binding HasStartedChat, Converter={StaticResource InverseBoolToVis}}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Str_Greeting}" 
                               FontSize="32" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextForegroundBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    
                    <!-- Attachment Preview (Landing Page) -->
                    <Border Background="{DynamicResource ChatAreaBackgroundBrush}" 
                            BorderBrush="{DynamicResource InputBoxBorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,10"
                            HorizontalAlignment="Left">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PendingAttachment}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PendingAttachment.FileIcon}" Margin="0,0,5,0" Foreground="{DynamicResource TextForegroundBrush}"/>
                            <TextBlock Text="{Binding PendingAttachment.FileName}" FontWeight="Bold" Foreground="{DynamicResource TextForegroundBrush}" Margin="0,0,10,0"/>
                            <Button Command="{Binding RemoveAttachmentCommand}" Content="❌" Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="Red"/>
                        </StackPanel>
                    </Border>

                    <!-- Centered Input Box -->
                     <Border Background="{DynamicResource InputBoxBackgroundBrush}" 
                             BorderBrush="{DynamicResource InputBoxBorderBrush}"
                             BorderThickness="1"
                             CornerRadius="25" 
                             Height="60"
                             Padding="15,0">
                         <Grid>
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="Auto"/> <!-- Paperclip -->
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="Auto"/> <!-- Send/Stop -->
                             </Grid.ColumnDefinitions>
                             
                             <!-- Attach Button -->
                             <Button Grid.Column="0"
                                     Command="{Binding AttachFileCommand}"
                                     Content="+"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Width="30"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Cursor="Hand"
                                     ToolTip="{DynamicResource Str_AttachFile}"
                                     Foreground="{DynamicResource TextForegroundBrush}"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,0,2"/>

                             <TextBox Grid.Column="1"
                                      Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalAlignment="Center"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Foreground="{DynamicResource TextForegroundBrush}"
                                      FontSize="16"
                                      CaretBrush="{DynamicResource TextForegroundBrush}"
                                      Margin="5,0"
                                      PreviewKeyDown="InputBox_PreviewKeyDown">
                                 <TextBox.InputBindings>
                                     <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                                 </TextBox.InputBindings>
                             </TextBox>
                             
                             <!-- Send Button (Arrow) - Landing Page -->
                             <Button Grid.Column="2" 
                                     Command="{Binding SendCommand}"
                                     BorderThickness="0"
                                     Width="40"
                                     Height="40"
                                     Cursor="Hand">
                                     <Button.Style>
                                     <Style TargetType="Button">
                                         <Setter Property="Visibility" Value="Visible"/>
                                         <Setter Property="Background" Value="{DynamicResource SendButtonBrush}"/>
                                         <Setter Property="Template">
                                             <Setter.Value>
                                                 <ControlTemplate TargetType="Button">
                                                     <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                         <TextBlock Text="➤" Foreground="{DynamicResource SendButtonTextBrush}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                                     </Border>
                                                 </ControlTemplate>
                                             </Setter.Value>
                                         </Setter>
                                         <Style.Triggers>
                                             <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                                 <Setter Property="Visibility" Value="Collapsed"/>
                                             </DataTrigger>
                                             <Trigger Property="IsEnabled" Value="False">
                                                 <Setter Property="Opacity" Value="0.5"/> 
                                             </Trigger>
                                         </Style.Triggers>
                                     </Style>
                                 </Button.Style>
                             </Button>
                         </Grid>
                     </Border>
                </StackPanel>
            </Grid>

            </Grid>

        <!-- Settings Overlay -->
        <Grid Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding IsSettingsOpen, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
           <Grid.Style>
               <Style TargetType="Grid">
                   <Setter Property="Visibility" Value="Collapsed"/>
                   <Style.Triggers>
                       <DataTrigger Binding="{Binding IsSettingsOpen}" Value="True">
                           <Setter Property="Visibility" Value="Visible"/>
                       </DataTrigger>
                   </Style.Triggers>
               </Style>
           </Grid.Style>
           
           <Border Background="{DynamicResource SidebarBackgroundBrush}" 
                   Width="400" Height="300" 
                   CornerRadius="10" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Padding="20"
                   BorderBrush="{DynamicResource InputBoxBorderBrush}" BorderThickness="1">
               <StackPanel>
                   <Grid Margin="0,0,0,20">
                       <TextBlock Text="{DynamicResource Str_Settings}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextForegroundBrush}"/>
                       <Button Command="{Binding ToggleSettingsCommand}" Content="✕" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextForegroundBrush}" FontSize="16" Cursor="Hand"/>
                   </Grid>
                   
                   <!-- Language -->
                   <StackPanel Margin="0,0,0,15">
                       <TextBlock Text="{DynamicResource Str_Language}" Foreground="#808080" Margin="0,0,0,5"/>
                       <Button Command="{Binding ToggleLanguageCommand}"
                               Height="40"
                               Content="{DynamicResource Str_Language}"
                               Background="Transparent"
                               BorderBrush="{DynamicResource InputBoxBorderBrush}"
                               BorderThickness="1"
                               Foreground="{DynamicResource TextForegroundBrush}"
                               Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                       </Button>
                   </StackPanel>

                   <!-- Theme -->
                   <StackPanel>
                       <TextBlock Text="{DynamicResource Str_ToggleTheme}" Foreground="#808080" Margin="0,0,0,5"/>
                       <Button Command="{Binding ToggleThemeCommand}"
                               Height="40"
                               Background="Transparent"
                               BorderBrush="{DynamicResource InputBoxBorderBrush}"
                               BorderThickness="1"
                               Foreground="{DynamicResource TextForegroundBrush}"
                               Cursor="Hand">
                           <Button.Content>
                               <TextBlock Text="🌙 / ☀️" FontSize="16"/>
                           </Button.Content>
                           <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                       </Button>
                   </StackPanel>
               </StackPanel>
           </Border>
        </Grid>
    </Grid>
</Window>
