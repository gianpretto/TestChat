<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colors -->
    <Color x:Key="AppBackgroundColor">#1E1E1E</Color>
    <Color x:Key="SidebarBackgroundColor">#202123</Color>
    <Color x:Key="ChatAreaBackgroundColor">#212121</Color>
    <Color x:Key="InputAreaBackgroundColor">#212121</Color> <!-- Same as chat or slightly different -->
    <Color x:Key="MessageBubbleAiColor">#444654</Color>
    <Color x:Key="MessageBubbleUserColor">#40414F</Color>
    <Color x:Key="TextForegroundColor">#FFFFFF</Color>
    <Color x:Key="InputBoxBackgroundColor">#383838</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="#303030"/>
    <SolidColorBrush x:Key="ChatAreaBackgroundBrush" Color="{StaticResource ChatAreaBackgroundColor}"/>
    <SolidColorBrush x:Key="InputAreaBackgroundBrush" Color="{StaticResource InputAreaBackgroundColor}"/>
    <SolidColorBrush x:Key="MessageBubbleAiBrush" Color="{StaticResource MessageBubbleAiColor}"/>
    <SolidColorBrush x:Key="MessageBubbleUserBrush" Color="{StaticResource MessageBubbleUserColor}"/>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="{StaticResource TextForegroundColor}"/>
    <SolidColorBrush x:Key="InputBoxBackgroundBrush" Color="{StaticResource InputBoxBackgroundColor}"/>
    <SolidColorBrush x:Key="InputBoxBorderBrush" Color="#505050"/>
    
    <!-- Send Button -->
    <Color x:Key="SendButtonColor">#40414F</Color>
    <SolidColorBrush x:Key="SendButtonBrush" Color="{StaticResource SendButtonColor}"/>
    <SolidColorBrush x:Key="SendButtonTextBrush" Color="#FFFFFF"/>
    
</ResourceDictionary>
